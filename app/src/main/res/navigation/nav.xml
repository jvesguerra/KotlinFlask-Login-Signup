<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/LogInPage">

    <fragment
        android:id="@+id/LogInPage"
        android:name="com.example.portal.LogInPage"
        android:label="fragment_blank"
        tools:layout="@layout/login_page">
        <action
            android:id="@+id/home"
            app:destination="@id/AdminHome" />
        <action
            android:id="@+id/userHome"
            app:destination="@id/userHome1" />
        <action
            android:id="@+id/toDriverHome"
            app:destination="@id/driverHome" />
        <action
            android:id="@+id/signup"
            app:destination="@id/signUpPage" />
    </fragment>
    <fragment
        android:id="@+id/AdminHome"
        android:name="com.example.portal.AdminHome"
        android:label="fragment_blank2"
        tools:layout="@layout/admin_home">
        <action
            android:id="@+id/logout"
            app:destination="@id/LogInPage" />
    </fragment>
    <fragment
        android:id="@+id/signUpPage"
        android:name="com.example.portal.SignUpPage"
        android:label="signup_page"
        tools:layout="@layout/signup_page" />
        <action
            android:id="@+id/toDriverSignUp"
            app:destination="@id/driverSignUp" />
        <action
            android:id="@+id/toUserSignUp"
            app:destination="@id/user_signup" />

    <fragment
        android:id="@+id/driverSignUp"
        android:name="com.example.portal.DriverSignUp"
        android:label="driver_signup"
        tools:layout="@layout/driver_signup" />
        <action
            android:id="@+id/toDriverHome"
            app:destination="@id/driverHome" />

    <fragment
        android:id="@+id/user_signup"
        android:name="com.example.portal.UserSignUp"
        android:label="user_signup"
        tools:layout="@layout/user_signup" />
        <action
            android:id="@+id/toUserHome1"
            app:destination="@id/userHome1" />

    <fragment
        android:id="@+id/userHome1"
        android:name="com.example.portal.UserHome1"
        android:label="user_home1"
        tools:layout="@layout/user_home1" />
    <fragment
        android:id="@+id/driverHome"
        android:name="com.example.portal.DriverHome"
        android:label="driver_home"
        tools:layout="@layout/driver_home" />
</navigation>
